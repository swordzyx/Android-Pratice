package blog.zero.com.androidlayout_yg.service;


import android.app.Service;
import android.content.Intent;
import android.os.IBinder;
import android.os.RemoteException;
import android.util.Log;
import android.widget.Toast;

import blog.zero.com.androidlayout_yg.aidl.IMyBinder;

public class MyService extends Service {

    public MyService(){

    }

    @Override
    public void onCreate(){
        super.onCreate();
        Log.d("MyService", "onCreate");
    }



    //---------第三方应用要绑定此服务时调用
    @Override
    public IBinder onBind(Intent intent){
        Log.d("MyService", "onBind");
        return new MyBinder();
    }

    private class MyBinder extends IMyBinder.Stub{
        @Override
        public void invokeMethodInService() throws RemoteException {
            methodInService();
        }
    }
    //------------------

    private void methodInService(){
        Toast.makeText(getApplicationContext(), "执行 MyService.methodInService", Toast.LENGTH_SHORT).show();
    }
}
