<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#30000000">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#30ff0000">

        <com.sword.materialedittext.view.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:floatingLabelShown="true"
            android:hint="Username"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#30ffff00">

        <com.sword.materialedittext.view.MaterialEditText1
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:useFloatingLabel="false"
            android:hint="Username"/>
    </FrameLayout>

</LinearLayout>