<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dialog_background_color">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/register_logo_margin_top"
        android:scaleType="fitCenter"
        android:src="@drawable/bg_sdk_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/xlcwsdk_get_make_sure_number_phone_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edit_text_background"
        android:hint="@string/input_phone_hint"
        android:textColorHint="@color/text_hint_color"
        android:imeOptions="flagNoExtractUi|actionDone"
        android:inputType="phone"
        android:maxLines="1"
        android:paddingLeft="8dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/xlcwsdk_register_register_bt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo" />

    <androidx.constraintlayout.helper.widget.Flow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="35dp"
        android:layout_marginTop="10dp"
        app:constraint_referenced_ids="accept_protocol, xlcwsdk_register_user_protocol_tv"
        app:layout_constraintTop_toBottomOf="@id/xlcwsdk_register_register_bt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/xlcwsdk_register_line" />

    <TextView
        android:id="@+id/accept_protocol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_mean_aggren"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/xlcwsdk_register_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/xlcwsdk_register_user_protocol_tv"
        app:layout_constraintTop_toBottomOf="@id/xlcwsdk_register_register_bt" />

    <TextView
        android:id="@+id/xlcwsdk_register_user_protocol_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_protocol"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/xlcwsdk_register_line"
        app:layout_constraintLeft_toRightOf="@id/accept_protocol"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/xlcwsdk_register_register_bt" />

    <Button
        android:id="@+id/xlcwsdk_register_register_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:text="@string/register_now"
        android:textColor="#fff"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/accept_protocol"
        app:layout_constraintLeft_toLeftOf="@id/xlcwsdk_get_make_sure_number_phone_et"
        app:layout_constraintRight_toRightOf="@id/xlcwsdk_get_make_sure_number_phone_et"
        app:layout_constraintTop_toBottomOf="@id/xlcwsdk_get_make_sure_number_phone_et" />


    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/visitor_login_flow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:flow_horizontalGap="8dp"
        app:constraint_referenced_ids="xlcwsdk_register_visiter_login_im, visitor_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/xlcwsdk_register_line"
        app:layout_constraintTop_toTopOf="@id/xlcwsdk_register_line"
        app:layout_constraintBottom_toBottomOf="@id/xlcwsdk_register_line"/>

    <TextView
        android:id="@+id/visitor_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="0dp"
        android:layout_toRightOf="@+id/xlcwsdk_register_visiter_login_im"
        android:text="@string/visitor_login"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/xlcwsdk_register_visiter_login_im"
        app:layout_constraintRight_toRightOf="@id/visitor_login_flow"
        app:layout_constraintTop_toTopOf="@id/visitor_login_flow"
        app:layout_constraintBottom_toBottomOf="@id/visitor_login_flow"/>

    <ImageView
        android:id="@+id/xlcwsdk_register_visiter_login_im"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/sdk_visitor_now"/>


    <View
        android:id="@+id/xlcwsdk_register_line"
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:layout_centerInParent="true"
        android:background="@color/xlcwsdk_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/xlcwsdk_register_account_tv"
        app:layout_constraintRight_toLeftOf="@id/xlcwsdk_register_visiter_login_im"
        app:layout_constraintTop_toBottomOf="@id/xlcwsdk_register_user_protocol_tv" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/account_login_flow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:flow_horizontalGap="8dp"
        app:constraint_referenced_ids="xlcwsdk_register_account_im, xlcwsdk_register_account_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/xlcwsdk_register_line"
        app:layout_constraintTop_toTopOf="@id/xlcwsdk_register_line"
        app:layout_constraintBottom_toBottomOf="@id/xlcwsdk_register_line"/>

    <TextView
        android:id="@+id/xlcwsdk_register_account_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:text="@string/account_login"
        android:textSize="14sp"
        app:layout_constraintRight_toLeftOf="@id/xlcwsdk_register_account_im"
        app:layout_constraintRight_toRightOf="@id/account_login_flow"
        app:layout_constraintTop_toTopOf="@id/account_login_flow"
        app:layout_constraintBottom_toBottomOf="@id/account_login_flow"/>

    <ImageView
        android:id="@+id/xlcwsdk_register_account_im"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/xlcwsdk_register_account_tv"
        android:src="@drawable/sdk_account_now"/>




</androidx.constraintlayout.widget.ConstraintLayout>