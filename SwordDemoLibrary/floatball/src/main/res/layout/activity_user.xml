<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/darker_gray">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/avatar"
        android:background="@drawable/avator_background"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    
    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/account_flow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        app:constraint_referenced_ids="account_name, account_phone"
        app:layout_constraintTop_toTopOf="@id/avatar"
        app:layout_constraintBottom_toBottomOf="@id/avatar"
        app:layout_constraintLeft_toRightOf="@id/avatar"/>
    
    <TextView
        android:id="@+id/account_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18173838575"
        app:layout_constraintTop_toTopOf="@id/account_flow"
        app:layout_constraintLeft_toLeftOf="@id/account_flow"
        app:layout_constraintbottom_toTopOf="@id/account_phone"/>
    
    <TextView
        android:id="@+id/account_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账号：18173838575"
        android:textSize="10dp"
        app:layout_constraintLeft_toLeftOf="@id/account_flow"
        app:layout_constraintTop_toBottomOf="@id/account_name"
        app:layout_constraintBottom_toBottomOf="@id/account_flow"/>
    
    <TextView
        android:id="@+id/float_menu_change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/password_change_icon"
        android:drawableEnd="@drawable/arrow_right"
        android:drawablePadding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:textSize="20sp"
        android:text="修改密码"
        android:textColor="#000"
        android:background="@drawable/account_tv_background"
        app:layout_constraintTop_toBottomOf="@id/avatar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/float_menu_account_safe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/account_safe"
        android:drawableEnd="@drawable/arrow_right"
        android:drawablePadding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:textSize="20sp"
        android:text="账号安全"
        android:textColor="#000"
        android:background="@drawable/account_tv_background"
        app:layout_constraintTop_toBottomOf="@id/float_menu_change_password"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
        
        
    
</androidx.constraintlayout.widget.ConstraintLayout>