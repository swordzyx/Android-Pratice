<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Transition
        app:constraintSetStart="@id/start"
        app:constraintSetEnd="@id/end"
        app:duration="1000">
        
        <OnClick
            app:targetId="@id/toggle"
            app:clickAction="toggle" />
        
        <KeyFrameSet>
            <KeyPosition
                app:motionTarget="@id/h"
                app:framePosition="50"
                app:percentX="1"
                app:percentY="0"
                app:keyPositionType="deltaRelative"/>
            
            <KeyPosition
                app:motionTarget="@id/e"
                app:framePosition="50"
                app:percentX="0.5"
                app:percentY="-0.5"
                app:keyPositionType="pathRelative"/>
            
            <KeyPosition
                app:motionTarget="id/n"
                app:framePosition="50"
                app:percentX="0.5"
                app:percentY="0.25"
                app:keyPositionType="parentRelative"/>
                
        </KeyFrameSet>
        
    </Transition>
    
    
    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@id/h"
            android:textColor="@color/color_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/e"/>
        
        <Constraint
            android:id="@id/e"
            android:textColor="@color/color_gray"
            app:layout_constraintStart_toStartOf="@id/h"
            app:layout_constraintTop_toBottomOf="@id/h"/>
        
        <Constraint
            android:id="@id/n"
            android:textColor="@color/color_gray"
            app:layout_constraintStart_toStartOf="@id/h"
            app:layout_constraintTop_toBottomOf="@id/e"/>
    </ConstraintSet>
    
    
    <ConstraintSet
        android:id="@+id/end">
        
        <Constraint
            android:id="@id/h"
            android:textColor="@color/colorAccent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/e"
            app:layout_constraintBottom_toBottomOf="parent"/>
        
        <Constraint
            android:id="@id/e"
            android:textColor="@color/color_gray"
            app:layout_constraintLeft_toRightOf="@id/h"
            app:layout_constraintTop_toTopOf="@id/h"
            app:layout_constraintRight_toLeftOf="@id/n"
            app:layout_constraintBottom_toBottomOf="@id/h"/>
        
        <Constraint
            android:id="@id/n"
            android:textColor="@color/common_accent_color"
            app:layout_constraintLeft_toRightOf="@id/e"
            app:layout_constraintTop_toTopOf="@id/h"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/h"/>
    </ConstraintSet>

</MotionScene>